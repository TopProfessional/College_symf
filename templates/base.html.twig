<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Welcome!
            {% endblock %}
        </title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {{renderMenu()}}
        {% endif %}

        <div class='user-links'>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <a href="{{ path('app_logout') }}">Logout</a>
                {% if (app.request.pathinfo != path('user_cabinet')) %}
                    <a href="{{ path('user_cabinet') }}">Cabinet</a>
                {% endif %}
            {% endif %}
        </div>

        {% block body %}{% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
