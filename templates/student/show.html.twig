{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Age</th>
                <td>{{ student.age }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ student.photo }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ student.startDate ? student.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Student Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.user.username }}</td>
            </tr>

            <tr>
                <th>Email</th>
                <td>{{ student.user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ student.user.roles ? student.user.roles|json_encode : '' }}</td>
            </tr>
            
            <tr>
                <th>Password</th>
                <td>{{ student.user.password }}</td>
            </tr>
            <tr>
                <th>User Id</th>
                <td>{{ student.user.id }}</td>
            </tr>

            <tr>
                <th>Courses</th>
                <td>
                    <ul>
                    {% for course in student.courses %}
                        <li>{{ course }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>

            <tr>
                <th>Classes</th>
                <td>{{ student.classes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}">back to list</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>

    {{ include('partial/_delete_form.html.twig', {delete_route: 'student_delete', entity: student}) }}
{% endblock %}
