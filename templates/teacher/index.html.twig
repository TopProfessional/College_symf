{% extends 'base.html.twig' %}

{% block title %}Teacher index{% endblock %}

{% block body %}
    <h1>Teacher index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Salary</th>
                <th>Teacher Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>User Id</th>
                <th>Courses</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.salary }}</td>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.user.username }}</td>
                <td>{{ teacher.user.email }}</td>
                <td>{{ teacher.user.roles ? teacher.user.roles|json_encode : '' }}</td>
                <td>{{ teacher.user.password }}</td>
                <td>{{ teacher.user.id }}</td>
                <td>
                    <ul>
                    {% for course in teacher.courses %}
                        <li>{{ course }}</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <a href="{{ path('teacher_show', {'id': teacher.id}) }}">show</a>
                    <a href="{{ path('teacher_edit', {'id': teacher.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('teacher_new') }}">Create new</a>
{% endblock %}
