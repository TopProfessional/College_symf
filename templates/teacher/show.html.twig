{% extends 'base.html.twig' %}

{% block title %}Teacher{% endblock %}

{% block body %}
    <h1>Teacher</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Salary</th>
                <td>{{ teacher.salary }}</td>
            </tr>
            <tr>
                <th>Teacher Id</th>
                <td>{{ teacher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ teacher.user.username }}</td>
            </tr>

            <tr>
                <th>Email</th>
                <td>{{ teacher.user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ teacher.user.roles ? teacher.user.roles|json_encode : '' }}</td>
            </tr>
            
            <tr>
                <th>Password</th>
                <td>{{ teacher.user.password }}</td>
            </tr>
            <tr>
                <th>User Id</th>
                <td>{{ teacher.user.id }}</td>
            </tr>
            <tr>
                <th>Course</th>
                <td>
                        <ul>
                        {% for course in teacher.courses %}
                            <li>{{ course }}</li>
                        {% endfor %}
                        </ul>
                </td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('teacher_index') }}">back to list</a>

    <a href="{{ path('teacher_edit', {'id': teacher.id}) }}">edit</a>

    {{ include('teacher/_delete_form.html.twig') }}
{% endblock %}
