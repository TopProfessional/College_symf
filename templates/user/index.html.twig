{% extends 'base.html.twig' %}
{% set usualUrl = absolute_url('users')  %}

{% block title %}User index{% endblock %}

{% block body %}
    <p> Find by roles</p>
    {{ include('partial/_form.html.twig', {'button_label': 'Aply'}) }}

    <h1>User index</h1>
{# {{usualUrl}} #}

    <table class="table">
        <thead>
            <tr>
                {% if usualUrl == app.request.uri %}
                    <th><a href="{{ usualUrl }}?sort=email">Email</a></th>
                    <th><a href="{{ usualUrl }}?sort=roles">Roles</a></th>
                    <th><a href="{{ usualUrl }}?sort=username">Name</a></th>
                    <th>Password</th>
                    <th><a href="{{ usualUrl }}?sort=id">Id</a></th>        
                {% else %}
                    <th><a href="{{ app.request.uri }}&sort=email">Email</a> </th>
                    <th><a href="{{ app.request.uri }}&sort=roles">Roles</a></th>
                    <th><a href="{{ app.request.uri }}&sort=username">Name</a></th>
                    <th>Password</th>
                    <th><a href="{{ app.request.uri }}&sort=id">Id</a></th>
                {% endif %}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in pager %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.id }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
       <br/>
    {{ pagerfanta(pager) }}
    <br/>
    <a href="{{ path('user_new') }}">Create new</a>
    <br/>
    <br/>
    {# <a href="{{ path('app_logout') }}">Logout</a> #}
    
{% endblock %}
