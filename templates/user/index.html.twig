{% extends 'base.html.twig' %}
{% set responseUrl = ''  %}

{% block title %}User index{% endblock %}

{% block body %}
    <p> Find by roles</p>

        {{ include('partial/_form.html.twig', {'button_label': 'Aply'}) }}

    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <a href="{{generateSortUrl('email')}}">
                        email {% if (generateArrow('email') == 'up') %}&#9650;{% elseif (generateArrow('email') == 'down') %}&#9660;{% endif %}
                    </a>
                </th>                
                <th>
                    <a href="{{generateSortUrl('roles')}}">
                        roles {% if (generateArrow('roles') == 'up') %}&#9650;{% elseif (generateArrow('roles') == 'down') %}&#9660;{% endif %}
                    </a>
                </th>  
                <th>
                    <a href="{{generateSortUrl('username')}}">
                        Name {% if (generateArrow('username') == 'up') %}&#9650;{% elseif (generateArrow('username') == 'down') %}&#9660;{% endif %}
                    </a>
                </th>  
                <th>Password</th>
                <th>
                    <a href="{{generateSortUrl('id')}}">
                        id {% if (generateArrow('id') == 'up') %}&#9650;{% elseif (generateArrow('id') == 'down') %}&#9660;{% endif %}
                    </a>
                </th>  
                <th>actions</th>
            </tr>
        </thead>
        <tbody>  
            {% for user in pager %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.id }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <br/>
        {{ pagerfanta(pager) }}
    <br/>
    <a href="{{ path('user_new') }}">Create new</a>  
    
{% endblock %}
